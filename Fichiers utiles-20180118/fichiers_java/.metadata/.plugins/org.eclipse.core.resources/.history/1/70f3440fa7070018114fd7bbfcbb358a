    static void afficheTableau(int[][]tab) {
	   for (int i=0; i<tab.length;i++){
		   for(int j =0; j<tab[0].length;j++){
			   
		   
		   System.out.print("["+tab[i][j]+"]");
		   }
		   System.out.println("");
	   }
   }
